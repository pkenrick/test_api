<h1>Log In</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= bootstrap_form_for :session, url: login_path do |f| %>
      <%= f.text_field :email %>
      <%= f.password_field :password %>
      <%= f.submit 'Log In' %>
      <br><br>
      <p>New User? <%= link_to 'Sign up now!', new_user_path %></p>
    </div>
  </div>
<% end %>
